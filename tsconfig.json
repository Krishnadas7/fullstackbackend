{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", 
    "outDir": "./dist",        // Ensure it's pointing to the root dist folder
    "rootDir": "./src",        // Your source TypeScript files should be in src
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],  // All .ts files inside src
  "exclude": ["node_modules"]  // Exclude node_modules folder
}
